{
  "schemaVersion": 1,
  "id": "cape-provider",
  "version": "${version}",
  "name": "Cape Provider",
  "description": "Use capes from various providers",
  "authors": [
    "litetex"
  ],
  "contributors": [
    {
      "name": "Cael & Capes mod contributors",
      "contact": {
        "homepage": "https://github.com/CaelTheColher/Capes"
      }
    }
  ],
  "contact": {
    "homepage": "https://github.com/litetex-oss/mcm-cape-provider",
    "sources": "https://github.com/litetex-oss/mcm-cape-provider",
    "issues": "https://github.com/litetex-oss/mcm-cape-provider/issues"
  },
  "license": "LGPL-2.1-or-later",
  "icon": "assets/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "net.litetex.capes.fabric.FabricCapes"
    ],
    "modmenu": [
      "net.litetex.capes.fabric.compatibility.ModMenuCompatibility"
    ]
  },
  "mixins": [
    "cape-provider.mixins.json"
  ],
  "accessWidener": "cape-provider.accesswidener",
  "recommends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "~${minecraft_version}",
    "modmenu": "~${modmenu_version}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.github_releases": "https://github.com/litetex-oss/mcm-cape-provider/releases",
        "modmenu.modrinth": "https://modrinth.com/mod/cape-provider"
      }
    }
  }
}
